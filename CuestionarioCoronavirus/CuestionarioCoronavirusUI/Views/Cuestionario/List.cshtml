@model IEnumerable<CuestionarioCoronavirusUI.Models.ClsPreguntaConListadoRespuestas>

@{
    ViewBag.Title = null;
}

@using (Html.BeginForm("Siguiente", "Cuestionario", FormMethod.Post))
{
    <br />
    <br />
    <br />
    <div>

        <table>
            <thead>
                <tr>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <h3>
                                <label>
                                    @Html.DisplayFor(modelItem => item.Pregunta)
                                </label>
                            </h3>
                        </td>

                        <td>
                            <div>
                                @for (int i = 0; i < item.ListadoRespuestasPorPregunta.Count; i++)
                                {
                                    //var lstAnswers = item.ListadoRespuestasPorPregunta.ToList();
                                    //1º digo que tipo radiobutton
                                    //2º digo que el nombre del boton es el id de la pregunta
                                    //3º le asigno el valor
                                    <label class="btn btn-info active">
                                        <input type="radio" required
                                               name="@string.Format("[{0}]", item.IdPregunta)"
                                               value="@item.ListadoRespuestasPorPregunta[i].Respuesta">@Html.DisplayFor(modelItem => item.ListadoRespuestasPorPregunta[i].Respuesta)
                                        </label>
                                    }

                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

        <br />
        <br />

        <div>
            <input type="submit" value="Siguente" name="btnSiguente"/>
        </div>
    </div >
}